{
  "packages": ["packages/*", "example"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "feature/convert-to-monorepo",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: release",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "**/example/**"
      ]
    }
  }
}
