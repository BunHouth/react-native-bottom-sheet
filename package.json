    "@release-it/conventional-changelog": "^2.0.0",
    "@types/react": "^17.0.0",
    "@types/react-native": "0.63.37",
    "auto-changelog": "^2.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
